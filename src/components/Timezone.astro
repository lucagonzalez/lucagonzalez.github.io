<script>
    import moment from 'moment-timezone';
    // This will run on the client
    const updateTime = () => {
        const timezone = 'Europe/Madrid'; // Change this to your desired timezone
        const now = moment.tz(timezone);
        const formattedTime = now.format('dddd, DD MMMM YYYY HH:mm:ss');
        const timezoneTimeElement = document.getElementById('timezone-time');
        if (timezoneTimeElement) {
            timezoneTimeElement.textContent = formattedTime;
        }
    };

    setInterval(updateTime, 1000);
    updateTime();
</script>
